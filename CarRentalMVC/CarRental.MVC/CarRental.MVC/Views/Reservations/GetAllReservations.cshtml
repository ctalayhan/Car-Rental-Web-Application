
@{
    ViewData["Title"] = "GetAllReservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<CarRental.MVC.Models.ViewModels.ReservationModelVM>
<link href="~/css/Cars/CarIndex.css" rel="stylesheet" />




<div class="row">
    <h1>GetAllReservations</h1>
    <button type="button" class="btn btn-success" id="add">Add Reservation</button>
</div>

<table class="table">
    <tr>
        <th scope="col">Reservation ID</th>
        <th scope="col">User Name</th>
        <th scope="col">Status</th>
        <th scope="col">ReservationDate</th>
        <th scope="col">Employee's Name</th>
        <th scope="col"></th>
        <th scope="col"></th>
    </tr>
    @foreach (var reservation in Model) {
        <tr>
            <td>@reservation.ReservationID</td>
            <td>@reservation.UserName</td>
            <td>@reservation.Status</td>
            <td>@reservation.ReservationDate.ToString("dd/MM/yyyy")</td>
            <td>@reservation.EmployeeName</td>
            <td><a asp-route-id="@reservation.ReservationID" asp-action="ReservationDetails" asp-controller="Reservations" type="button" class="btn btn-primary">Details</a></td>
            <td><a asp-route-id="@reservation.ReservationID" asp-action="DeleteReservation" asp-controller="Reservations" type="button" class="btn btn-danger">Delete</a></td>
        </tr>

    }
</table>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#add").click(function () {
            $(document).load("AddReservation.cshtml");
        });
    });
</script>